# =============================================================================
# BIND9 REST API Environment Configuration
# Managed by Ansible - Generated: {{ ansible_date_time.iso8601 }}
# =============================================================================
# WARNING: This file contains sensitive credentials. Do not commit to version control!

# -----------------------------------------------------------------------------
# API Server Settings
# -----------------------------------------------------------------------------
BIND9_API_HOST={{ bind9_api_host }}
BIND9_API_PORT={{ bind9_api_port }}
BIND9_API_LOG_LEVEL={{ bind9_api_log_level }}
BIND9_API_WORKERS={{ bind9_api_workers }}

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
BIND9_API_AUTH_STATIC_API_KEY={{ bind9_api_key }}

# -----------------------------------------------------------------------------
# BIND9 Paths (note: attribute is bind9_* so env var is BIND9_API_BIND9_*)
# -----------------------------------------------------------------------------
BIND9_API_BIND9_CONFIG_PATH={{ bind9_config_dir }}/named.conf
BIND9_API_BIND9_ZONES_PATH={{ bind9_zones_dir }}
BIND9_API_BIND9_ACL_FILE={{ bind9_config_dir }}/named.conf.acls
BIND9_API_BIND9_RNDC_KEY={{ bind9_config_dir }}/rndc.key

# -----------------------------------------------------------------------------
# Binary Paths
# -----------------------------------------------------------------------------
BIND9_API_BIND9_RNDC_PATH=/usr/sbin/rndc
BIND9_API_BIND9_NSUPDATE_PATH=/usr/bin/nsupdate
BIND9_API_BIND9_NAMED_CHECKZONE=/usr/bin/named-checkzone
BIND9_API_BIND9_NAMED_CHECKCONF=/usr/bin/named-checkconf

# -----------------------------------------------------------------------------
# Statistics Channel
# -----------------------------------------------------------------------------
BIND9_API_BIND9_STATS_URL=http://127.0.0.1:{{ bind9_stats_port }}

# -----------------------------------------------------------------------------
# TSIG Key Configuration
# -----------------------------------------------------------------------------
BIND9_API_TSIG_KEY_FILE={{ bind9_keys_dir }}/ddns-key.key
BIND9_API_TSIG_KEY_NAME=ddns-key
BIND9_API_TSIG_KEY_ALGORITHM={{ bind9_tsig_algorithm }}

# -----------------------------------------------------------------------------
# Database (disabled - using file-based storage)
# -----------------------------------------------------------------------------
BIND9_API_DATABASE_ENABLED=false
